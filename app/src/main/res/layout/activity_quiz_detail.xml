<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorStudentMain"
    tools:context="com.aclass.panther.uwm.pantheractive.QuizDetailActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quizIdLabel"
        android:text="QUIZ ID : "
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewQuizId"
        android:text="N/A"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/quizIdLabel"
        android:layout_toEndOf="@+id/quizIdLabel"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classIdLabel"
        android:text="CLASS ID: "
        android:visibility="gone"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewQuizId"
        android:layout_toEndOf="@+id/textViewQuizId"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewClassId"
        android:text=""
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/classIdLabel"
        android:layout_toEndOf="@+id/classIdLabel"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelAvailableFrom"
        android:text="Starts On: "
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_below="@+id/textViewQuizId"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDateFrom"
        android:text="Date: "
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/textViewQuizId"
        android:layout_toRightOf="@+id/labelAvailableFrom"
        android:layout_toEndOf="@+id/labelAvailableFrom"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTimeFrom"
        android:text="Time: "
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/textViewQuizId"
        android:layout_toRightOf="@+id/textViewDateFrom"
        android:layout_toEndOf="@+id/textViewDateFrom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelAvailableTo"
        android:text="Ends On: "
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_below="@+id/labelAvailableFrom"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDateTo"
        android:visibility="gone"
        android:text="Date: "
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/labelAvailableFrom"
        android:layout_toRightOf="@+id/labelAvailableTo"
        android:layout_toEndOf="@+id/labelAvailableTo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTimeTo"
        android:text="Time: "
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/labelAvailableFrom"
        android:layout_toRightOf="@+id/textViewDateFrom"
        android:layout_toEndOf="@+id/textViewDateFrom"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewIsAvailable"
        android:text=""
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_below="@+id/labelAvailableTo"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewIsTaken"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Quiz Not Attempted"
        android:layout_below="@+id/textViewIsAvailable"
        android:layout_marginBottom="30dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextChallenge"
        android:inputType="text"
        android:textStyle="bold"
        android:hint="Enter Pass Code to Start the Quiz"
        android:layout_below="@+id/textViewIsTaken"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStartQuiz"
        android:text="Start Quiz"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextChallenge"
        android:background="@color/colorFresh"
        />
    <Button
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonListQuizzes"
        android:text="My Submitted Quizzes"
        android:layout_below="@+id/editTextChallenge"
        android:background="@color/colorFresh"
        android:layout_toRightOf="@+id/buttonStartQuiz"
        android:layout_toEndOf="@+id/buttonStartQuiz"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
